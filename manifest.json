{
  "manifest_version": 2,
  "name": "ClearURLs",
  "version": "1.1.2.4",
  "author": "Kevin R.",
  "description": "Remove tracking elements form URLs. ",
  "homepage_url": "https://github.com/KevinRoebert/ClearUrls",
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "96": "icon96.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "ClearURLs Add-on",
    "default_popup": "popup_new.html"
  },
  "permissions": [
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "background": {
    "scripts": [
      "clearurls.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
      "siteBlockedAlert.html"
  ]
}
